#include <dt-bindings/zmk/mouse.h>
#include <input/processors.dtsi>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>
#include <dt-bindings/zmk/rgb.h>

/*

   &mmv_input_listener {
       input-processors = <&zip_xy_scaler 2 1>;
   };

   &msc_input_listener {
       input-processors = <&zip_xy_scaler 2 1>;
   };

 */

#define ZMK_MOUSE_DEFAULT_MOVE_VAL 1200  // 600
#define ZMK_MOUSE_DEFAULT_SCRL_VAL 20    // 10

/ {
    behaviors {
        td0: td0 {
            compatible = "zmk,behavior-tap-dance";
            display-name = "Shift/Caps Lock Tap Dance";
            #binding-cells = <0>;
            bindings = <&kp LEFT_SHIFT>, <&kp CAPS>;
        };
    };

    rgb_encoder: rgb_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&rgb_ug RGB_BRI>, <&rgb_ug RGB_BRD>;
    };

    scroll_encoder: scroll_encoder {
        compatible = "zmk,behavior-sensor-rotate";
        #sensor-binding-cells = <0>;
        bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

        tap-ms = <30>;
    };

    macros {
        esc_lang2: esc_lang2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp ESCAPE &kp LANG2>;
            label = "ESC_LANG2";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        maple {
            display-name = "QWERTY";
            bindings = <
&kp TAB       &kp NUMBER_1  &kp NUMBER_2    &kp UP_ARROW      &kp NUMBER_3  &kp NUMBER_4                             &bt BT_SEL 1                &kp Y               &kp U  &kp I        &kp O    &kp P      &kp BSPC
&kp ESCAPE    &kp N5        &kp LEFT_ARROW  &kp DOWN_ARROW    &kp RIGHT     &kp NUMBER_6               &bt BT_SEL 0  &bt BT_SEL 4  &bt BT_SEL 2  &kp H               &kp J  &kp K        &kp L    &kp COLON  &kp MINUS
&kp LEFT_GUI  &kp LEFT_ALT  &kp N7          &kp N8            &kp N9        &kp N0          &kp TAB                  &bt BT_SEL 3                &kp N               &kp M  &kp COMMA    &kp DOT  &kp FSLH   &kp EQUAL
                                            &kp LEFT_CONTROL  &kp SPACE     &kp LEFT_SHIFT                                                       &mt LEFT_ALT LANG1  &mo 2  &lt 3 ENTER
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;
        };

        default_layer {
            display-name = "QWERTY";
            bindings = <
&kp TAB       &kp Q  &kp W  &kp E             &kp R      &kp T                                          &bt BT_SEL 1                &kp Y               &kp U  &kp I        &kp O    &kp P      &kp BSPC
&esc_lang2    &kp A  &kp S  &kp D             &kp F      &kp G                            &bt BT_SEL 0  &bt BT_SEL 4  &bt BT_SEL 2  &kp H               &kp J  &kp K        &kp L    &kp COLON  &kp MINUS
&kp LEFT_GUI  &kp Z  &kp X  &kp C             &kp V      &kp B                 &kp TAB                  &bt BT_SEL 3                &kp N               &kp M  &kp COMMA    &kp DOT  &kp FSLH   &kp EQUAL
                            &kp LEFT_CONTROL  &kp SPACE  &mt LEFT_SHIFT LANG2                                                       &mt LEFT_ALT LANG1  &mo 2  &lt 3 ENTER
            >;

            sensor-bindings = <&inc_dec_kp C_VOLUME_UP C_VOLUME_DOWN>;
        };

        lower_layer {
            display-name = "NUMBER";
            bindings = <
&trans  &kp EXCLAMATION  &kp AT_SIGN  &kp LEFT_BRACE        &kp RIGHT_BRACE        &kp PIPE                            &none              &kp BACKSLASH  &kp DOUBLE_QUOTES  &kp SINGLE_QUOTE  &kp GRAVE  &kp TILDE      &trans
&trans  &kp HASH         &kp DOLLAR   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp AMPERSAND                &none  &bt BT_CLR  &none  &kp LEFT       &kp DOWN           &kp UP            &kp RIGHT  &kp SEMICOLON  &trans
&trans  &kp PERCENT      &kp CARET    &kp LEFT_BRACKET      &kp RIGHT_BRACKET      &kp ASTERISK   &kp C_MUTE           &none              &trans         &trans             &trans            &trans     &trans         &trans
                                      &trans                &trans                 &trans                                                 &trans         &trans             &trans
            >;

            sensor-bindings = <&scroll_encoder>;
        };

        raise_layer {
            display-name = "SYMBOL";
            bindings = <
&trans  &kp F1        &kp F2        &kp F3        &kp F4        &kp F5                            &mmv MOVE_UP                     &kp F6        &kp F7        &kp F8  &kp F9  &kp F10  &kp F11
&trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp NUMBER_4  &kp N5            &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &kp NUMBER_6  &kp NUMBER_7  &kp N8  &kp N9  &kp N0   &kp F12
&trans  &trans        &trans        &none         &none         &trans  &trans                    &mmv MOVE_DOWN                   &trans        &trans        &trans  &trans  &trans   &trans
                                    &trans        &trans        &trans                                                             &trans        &trans        &trans
            >;

            sensor-bindings = <&scroll_encoder>;
        };

        layer_3 {
            display-name = "Fn";
            bindings = <
&studio_unlock  &kp F1      &kp F2     &kp F3       &kp F4     &kp F5                                  &mmv MOVE_UP                     &kp F6       &kp F7     &kp F8       &kp F9      &kp F10          &kp F11
&trans          &trans      &mkp LCLK  &mkp MCLK    &mkp RCLK  &mkp MB4                &mmv MOVE_LEFT  &mkp LCLK       &mmv MOVE_RIGHT  &bootloader  &mkp LCLK  &mkp MCLK    &mkp RCLK   &kp PRINTSCREEN  &kp F12
&trans          &sys_reset  &trans     &bootloader  &trans     &mkp MB5  &kp C_MUTE                    &mmv MOVE_DOWN                   &trans       &trans     &bootloader  &sys_reset  &kp SCROLLLOCK   &kp PAUSE_BREAK
                                       &trans       &trans     &trans                                                                   &trans       &trans     &trans
            >;

            sensor-bindings = <&scroll_encoder>;
        };
    };
};
